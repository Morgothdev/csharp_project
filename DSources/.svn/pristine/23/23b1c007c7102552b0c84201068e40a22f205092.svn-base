using System;
using Microsoft.VisualStudio.TestTools.UnitTesting;

namespace DSources.Data
{
    [TestClass]
    public class CellTest
    {
        [TestMethod]
        [TestCategory("Cell")]
        [TestCategory("Implemented")]
        public void TestCloningCells()
        {
            Cell cell = new Cell(45);
            Cell cloned =(Cell) cell.Clone();
            Assert.AreEqual(cell, cloned);
            Assert.AreNotSame(cell, cloned);
        }

        [TestMethod]
        [TestCategory("Cell")]
        [TestCategory("Implemented")]
        public void TestEqualsCells()
        {
            Cell cell1 = new Cell(45);
            Cell cell2 = new Cell(45);
            Console.WriteLine("cells1 : " + cell1+"value "+cell1.Value);
            Console.WriteLine("cell2 : " + cell2 + "value " + cell2.Value);
            Console.WriteLine("equals: " + cell1.Equals(cell2));
            Assert.AreEqual(cell1, cell2);
            Assert.AreNotSame(cell1, cell2);
        }
    }
}
