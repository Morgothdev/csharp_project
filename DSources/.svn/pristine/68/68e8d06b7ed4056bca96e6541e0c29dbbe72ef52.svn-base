using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Text;
using System.Threading.Tasks;

namespace DSources.Logic
{
    public class ClassesFilter
    {
        public ICollection<MyType> getAssembliesImplementInterface(Type AnInterface)
        {
            IEnumerable<Type> types = AppDomain.CurrentDomain.GetAssemblies()
                .SelectMany(s => s.GetTypes())
                .Where(p => AnInterface.IsAssignableFrom(p));
            ICollection<MyType> result = new List<MyType>();

            foreach (Type t in types)
            {
                result.Add(new MyType(t));
            }
            return result;
        }
    }
}
