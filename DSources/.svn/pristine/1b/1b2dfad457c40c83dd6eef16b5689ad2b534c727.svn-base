using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Runtime.Serialization.Formatters.Binary;
using System.Text;

namespace DSources.Data
{
    [SerializableAttribute]
    public class DataModel : ICloneable
    {
        private List<Column> _columns = new List<Column>();

        public virtual int ColumnsCount { get { return _columns.Count; } }

        public virtual int RowsCount { 
            get { 
                if (ColumnsCount > 0) { 
                    return ColumnAt(0).CellsCount; 
                } else { 
                    return -1; 
                } 
            } 
        }


        public virtual Column ColumnAt(int Index)
        {
            return _columns.ElementAt(Index);
        }


        public virtual void AddColumnsAtBegin(List<Column> Columns)
        {
            if (Columns.Count <= 0) {return; }
            CheckEqualsRowsCount(Columns);
            _columns.InsertRange(0, Columns);
        }

        public virtual void AddColumnsAtIndex(int Index, List<Column> Columns)
        {
            if (Columns.Count <= 0) { return; }
            CheckEqualsRowsCount(Columns);
            _columns.InsertRange(Index, Columns);
        }

        public virtual void AddColumnsAtEnd(List<Column> Columns)
        {
            if (Columns.Count <= 0) { return; }
            CheckEqualsRowsCount(Columns);
            _columns.InsertRange(_columns.Count, Columns);
        }

        private void CheckEqualsRowsCount(List<Column> Columns)
        {
            if (ColumnsCount == 0)
            {
                int rows = Columns.ElementAt(0).CellsCount;
                foreach (Column column in Columns)
                {
                    if (rows != column.CellsCount) { throw new ArgumentException(); }
                }
            }
            else
            {
                foreach (Column column in Columns)
                {
                    if (RowsCount != column.CellsCount) { throw new ArgumentException(); }
                }
            }
        }


        public virtual IEnumerator<Column> ColumnsIterator()
        {
            foreach (Column c in _columns)
            {
                yield return c;
            }
        }

        public virtual List<Column> Slice(int From, int To)
        {
            int IndexFrom = From;
            int IndexTo = (To > 0) ? To : (To < 0) ? _columns.Count + To : _columns.Count;
            int count = IndexTo - IndexFrom;
            if (count < 0) { count = 0; }
            return _columns.GetRange(IndexFrom, count);
        }

        public virtual List<Column> Slice(int Index)
        {
            if (Index < 0)
            {
                return Slice(0, -Index);
            }
            else
            {
                return Slice(Index, 0);
            }
        }

        public virtual CellsIterator CellsIterator()
        {
            return new StubCellsIterator();
        }

        public object Clone()
        {
            return CloneModel();
        }

        public DataModel CloneModel()
        {
            using (var ms = new MemoryStream())
            {
                var formatter = new BinaryFormatter();
                formatter.Serialize(ms, this);
                ms.Position = 0;
                return (DataModel)formatter.Deserialize(ms);
            }
        }

        public override bool Equals(object obj)
        {
            if (obj == null || GetType() != obj.GetType())
            {
                return false;
            }
            DataModel another = (DataModel)obj;
            if (another == null) { return false; }
            if (!another._columns.SequenceEqual(this._columns)) { return false; }
            return true;
        }

        public override int GetHashCode()
        {
            return base.GetHashCode();
        }


        public void InsertRecordAtIndex(int Index, IList<Cell> record)
        {
            if (record.Count != _columns.Count) { throw new ArgumentException(); }
            for (int i = record.Count - 1; i >= 0; i--)
            {
                _columns.ElementAt(i).AddCellAtIndex(Index, record.ElementAt(i));
            }
        }

        public void InsertRecord(List<Cell> record)
        {
            if (record.Count != ColumnsCount) { throw new ArgumentException(); }
            InsertRecordAtIndex(RowsCount, record);
        }

        public void RemoveRecord(int Index)
        {
            foreach (Column column in _columns)
            {
                column.RemoveCellAtIndex(Index);
            }
        }
    }
}
